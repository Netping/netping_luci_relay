
config globals 'globals'
	option restart_time '30'
	option default_name 'Relay'
	option relay_max_number '16'
	list proto 'HTTP.Протокол 1'
	list proto 'SNMP.Протокол 2'
	list status '0.Норма'
	list status '1.Нет связи'
	list status '2.Перезагрузка'
	list status '3.Ошибка'
	list state '0.Выключено OFF'
	list state '1.Включено ON'
	option default_template_path '/etc/netping_luci_relay/template/default'
	list possible_event 'error.Ошибка'
	list possible_event 'restart.Перезагрузка'
	list possible_event 'no_conn.Нет связи'
	option default_port '9000'
	list possible_sendmethod 'syslog.Logfile'
	list possible_sendmethod 'email.Email'
	list possible_sendmethod 'sms.Sms'

config relay 'relay_prototype'
	option name 'Relay'
	option embedded '0'
	option state '0'
	option status '0'
	option restart_time '30'
	option proto 'HTTP'
	option dest_addr '0.0.0.0'
	option login 'user'
	option password 'pass'
	option number '0'
	option dest_port '5555'

config alert 'alert_prototype'
	option enabled '0'
	option event 'error'
	option sendmethod 'syslog'
	list day 'mon.Пн'
	list day 'tue.Вт'
	list day 'wen.Ср'
	list day 'thi.Чт'
	list day 'fri.Пт'
	list day 'sat.Сб'
	list day 'sun.Вс'
	option starttime '08:00'
	option endtime '18:00'
	list template_param '%_relayid_%'
	list template_param '%_relayid::restart_time_%'
	list template_param '%_rackid_%'
	list template_param '%_rackid::location_%'
	list template_param '%_user_%'
	list template_param '%_user::lastname_%'
	list template_param '%_user::firstname_%'
	list template_param '%_datetime_%'
	list custom_template '/etc/netping_luci_relay/template/custom/error.sms'
	list custom_template '/etc/netping_luci_relay/template/custom/error.email'
	list custom_template '/etc/netping_luci_relay/template/custom/error.syslog'
	list condition '0|relayid::restart_time|>|120'
	list condition 'AND|rackid::location|==|Москва, Электродная ул., д.2'

config relay
	option embedded '1'
	option status '0'
	option state '1'
	option restart_time '12'
	option name 'Серверный шкаф основной'

config relay
	option embedded '1'
	option status '0'
	option restart_time '30'
	option name 'Резервный серверный шкаф'
	option state '0'

config relay
	option embedded '0'
	option login 'user'
	option name 'Пожарная сигнализация'
	option number '5'
	option proto 'SNMP'
	option dest_addr '192.168.0.22'
	option restart_time '120'
	option password '12334'
	option dest_port '65300'
	option state '1'
	option status '2'

