config relay
	option dest_addr '0.0.0.0'
	option embedded '0'
	option restart_time '30'
	option dest_port '9000'
	option number '0'
	option name 'Relay 4'
	option password 'pass'
	option status '0'
	option login 'user'
	option proto 'HTTP'
	option state '1'

