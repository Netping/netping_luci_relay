config alert
	option enabled '0'
	option event 'restart'
	option sendmethod 'email'
	list day 'mon.Пн'
	list day 'tue.Вт'
	list day 'wen.Ср'
	list day 'thi.Чт'
	list day 'fri.Пт'
	list day 'sat.Сб'
