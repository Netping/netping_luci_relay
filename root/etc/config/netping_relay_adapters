
# RELAY ADAPTER TEMPLATE
# ======================

config template 'relay'
	option id 'relay[0]'
	option memo '0'
	option embedded '0'
	option state_on '0'
	option state_off '0'
	option state '0'
	option restart_time '0'
	option status '0'
	option proto '0'

