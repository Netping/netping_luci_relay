# PROTOCOL ADAPTER TEMPLATES
# ==========================

config template 'http'
	option id 'http[0]'
	option address '0.0.0.0'
	option port '0'
	option login '0'
	option password '0'

config template 'snmp'
	option id 'snmp[0]'
	option address '0'
	option port '0'
	option community '0'


# PROTOCOL DATA
# =============

config http
	option id 'http[1]'
	option address '192.168.0.1'
	option port '65535'
	option login 'user'
	option password 'pass'

config http
	option id 'http[2]'
	option address '192.168.0.1'
	option port '65535'
	option login 'user'
	option password 'pass'

config snmp
	option id 'snmp[1]'
	option address '.0.1.2.3.4.500'
	option port '61'
	option community 'helloworld'	